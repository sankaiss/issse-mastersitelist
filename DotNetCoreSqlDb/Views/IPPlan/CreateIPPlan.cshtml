@model DotNetCoreSqlDb.Models.IPPlan

@{
    ViewData["Title"] = "Lägg till en ny IP-Plan";
}

<h2 class="main_h1">Lägg till</h2>
<br>
<br>
                <form asp-action="CreateIPPlan">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="Nät" class="control-label"></label>
                        <input asp-for="Nät" class="form-control wide-input" />
                        <span asp-validation-for="Nät" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="Mask" class="control-label"></label>
                        <input asp-for="Mask" class="form-control wide-input" />
                        <span asp-validation-for="Mask" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="MGMT" class="control-label"></label>
                        <input asp-for="MGMT" class="form-control wide-input" />
                        <span asp-validation-for="MGMT" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="WLAN" class="control-label"></label>
                        <input asp-for="WLAN" class="form-control wide-input" />
                        <span asp-validation-for="WLAN" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="LAN" class="control-label"></label>
                        <input asp-for="LAN" class="form-control wide-input" />
                        <span asp-validation-for="LAN" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control wide-input" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="Site" class="control-label"></label>
                        <input asp-for="Site" class="form-control wide-input" />
                        <span asp-validation-for="Site" class="text-danger"></span>
                    </div>
                    <div class="col-md-3 mb-1">
                        <label asp-for="GammalSite" class="control-label"></label>
                        <input asp-for="GammalSite" class="form-control wide-input" />
                        <span asp-validation-for="GammalSite" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="col-md-3 mb-1">
                        <input type="submit" value="Spara" class="btn btn-primary mr-2" />
                        <a asp-action="Index" class="btn btn-primary">Tillbaka</a>
                    </div>
                </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}