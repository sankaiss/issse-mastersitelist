@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h2 class="main_h1">Registrera</h2>

<form method="post" class="mt-4">
    <div class="container">
        <div class="login-form">

            <div class="form-group">
                <label>Ditt Namn:</label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label>Lösenord:</label>
                <input asp-for="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
                <p>Lösenord måste vara minst @ViewBag.PasswordLengthRequirement tecken långt.</p>
                <p>@if (ViewBag.RequireDigit) { <span>Innehålla minst en siffra.</span> }</p>
                <p>@if (ViewBag.RequireUppercase) { <span>Innehålla minst en versal.</span> }</p>
                <p>@if (ViewBag.RequireLowercase) { <span>Innehålla minst en gemen.</span> }</p>
                <p>@if (ViewBag.RequireNonAlphanumeric) { <span>Innehålla minst ett icke-alfanumeriskt tecken (t.ex. !, $, #, %).</span> }</p>
            </div>
            
            <div class="form-group">
                <label>Bekräfta lösenord:</label>
                <input asp-for="ConfirmPassword" class="form-control" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Registrera</button>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
    </div>
</form>

