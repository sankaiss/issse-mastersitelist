@model RegisterViewModel
@{
    ViewData["Title"] = "Registrera";
}
<br>
<div class="container">

    <form method="post" class="mt-4">
    
        <h1 class="info-title"><i class="fas fa-user-circle"></i> @ViewData["Title"]</h1>
        <br>
        <div class="login-form">

            <div class="form-group">
                <label>Ditt Namn:</label>
                <input asp-for="FullName" class="form-control" required />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            

                @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

            </div>
            
            <div class="form-group">
                <label>Lösenord:</label>
                <input asp-for="Password" class="form-control" required />
            </div>
            
            <div class="form-group">
                <label>Bekräfta lösenord:</label>
                <input asp-for="ConfirmPassword" class="form-control" required />
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Registrera</button>
            </div>

            <div class="password-requirements mt-4">
                <p>Lösenordskrav:</p>
                <ul>
                    <li>Minst @ViewBag.PasswordLengthRequirement tecken långt.</li>
                    <li>@if (ViewBag.RequireDigit) { <span>Innehålla minst en siffra.</span> }</li>
                    <li>@if (ViewBag.RequireUppercase) { <span>Innehålla minst en versal.</span> }</li>
                    <li>@if (ViewBag.RequireLowercase) { <span>Innehålla minst en gemen.</span> }</li>
                    <li>@if (ViewBag.RequireNonAlphanumeric) { <span>Innehålla minst ett icke-alfanumeriskt tecken (t.ex. !, $, #, %).</span> }</li>
                </ul>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
    
    </form>
</div>
