@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<ApplicationUser>

<h2>Användarlista</h2>
<br>

<table class="table table-bordered table-striped">
    <thead>
        <tr class="text-center">
            <th>Användare</th>
            <th>Användarnamn</th>
            <th>Roller</th>
            <th>Ändra roll</th>
            <th>Åtgärder</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr class="text-center">
                <td>@user.FullName</td>
                <td>@user.UserName</td>
                <td>
                    @if(await UserManager.IsInRoleAsync(user, "Admin"))
                    {
                        <span class="badge bg-success">Admin</span>
                    }
                    else if(await UserManager.IsInRoleAsync(user, "Editor"))
                    {
                        <span class="badge bg-warning">Editor</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">User</span>
                    }
                </td>
                <td>
                    @if(!(await UserManager.IsInRoleAsync(user, "Admin")))
                    {
                        <form method="post" action="@Url.Action("AssignAdminRole")">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-primary btn-sm" onclick="return confirm('Är du säker på att du vill tilldela Admin rollen?');">
                                Gör till Admin
                            </button>
                        </form>
                    }

                    @if(!(await UserManager.IsInRoleAsync(user, "Editor")))
                    {
                        <form method="post" action="@Url.Action("AssignEditorRole")">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-warning btn-sm" onclick="return confirm('Är du säker på att du vill tilldela Editor rollen?');">
                                Gör till Editor
                            </button>
                        </form>
                    }

                    @if(!(await UserManager.IsInRoleAsync(user, "User")))
                    {
                        <form method="post" action="@Url.Action("AssignUserRole")">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-secondary btn-sm" onclick="return confirm('Är du säker på att du vill tilldela User rollen?');">
                                Gör till User
                            </button>
                        </form>
                    }
                </td>
                <td>
                    <a onclick="return confirm('Är du säker på att du vill radera denna användare?');" href="@Url.Action("DeleteUser", "Admin", new { userId = user.Id })" class="btn btn-danger btn-sm">Radera</a>
                </td>
            </tr>
        }
    </tbody>
</table>
